    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/sys/logout.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddProdServlet</servlet-name>
    <url-pattern>/sys/addProd.do</url-pattern>
  </servlet-mapping>
