    <servlet-class>com.order.web.ValiImg</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.order.web.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.order.web.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AddProdServlet</servlet-name>
    <servlet-class>com.order.web.AddProdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImgServlet</servlet-name>
    <servlet-class>com.order.web.ImgServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PageProdServlet</servlet-name>
