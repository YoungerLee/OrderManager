  <servlet-mapping>
    <servlet-name>RegistServlet</servlet-name>
    <url-pattern>/sys/regist.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ValiImg</servlet-name>
    <url-pattern>/sys/valiImg.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/sys/login.do</url-pattern>
  </servlet-mapping>
